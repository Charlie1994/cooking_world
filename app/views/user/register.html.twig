{% extends "generalTemplate.html.twig" %}
{% block description %}
    Cooking World, User Registration Page.
{% endblock %}
{% block cssfiles %}
    <link href="{{ rootpath }}/public/css/registration-wizard.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="{{ rootpath }}/public/css/themify-icons.css" rel="stylesheet">
{% endblock %}
{% block title %}
    User Registration
{% endblock %}
{% block extra_body %}
<div class="register-container">
    <div class="register-background"></div>
</div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <!--      Wizard container        -->
            <div class="wizard-container">

                <div class="card wizard-card" data-color="orange" id="wizardProfile">
                    <form action="" method="">
                        <!--        You can switch " data-color="orange" "  with one of the next bright colors: "blue", "green", "orange", "red", "azure"          -->

                        <div class="wizard-header text-center">
                            <h3 class="wizard-title">Create your profile</h3>
                            <p class="category">This information will let us know more about you.</p>
                        </div>

                        <div class="wizard-navigation">
                            <div class="progress-with-circle">
                                <div class="progress-bar" role="progressbar" aria-valuenow="1" aria-valuemin="1" aria-valuemax="3" style="width: 21%;"></div>
                            </div>
                            <ul>
                                <li id="userinfo-tab">
                                    <a href="#user-info" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="ti-user"></i>
                                        </div>
                                        User Info
                                    </a>
                                </li>
                                <li id="verification-tab">
                                    <a href="#email-verification" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="ti-email"></i>
                                        </div>
                                        Email Verification
                                    </a>
                                </li>
                                <li id="complete-tab">
                                    <a href="#complete" data-toggle="tab">
                                        <div class="icon-circle">
                                            <i class="ti-check"></i>
                                        </div>
                                        Registration Complete
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane" id="user-info">
                                <div class="row">
                                    <h5 class="info-text"> User Information</h5>
                                    <div class="col-sm-4 col-sm-offset-1">
                                        <div class="register-avatar no-photo">
                                            <div class="padding"></div>
                                            <div class="picture-container">
                                                <div class="picture">
                                                    <img src="{{ resourcepath }}images/default-avatar.png" class="picture-src" id="wizardPicturePreview" title="" />
                                                    <input type="file" id="wizard-picture">
                                                </div>
                                            </div>
                                            <h3>Choose a photo</h3>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Username <small>(required)</small></label>
                                            <input name="username" type="text" class="form-control" placeholder="username...">
                                        </div>
                                        <div class="form-group">
                                            <label>Password <small>(required)</small></label>
                                            <input name="password" id="user_password" type="password" class="form-control" placeholder="Smith...">
                                        </div>
                                        <div class="form-group">
                                            <label>Confirm Password <small>(required)</small></label>
                                            <input name="confirm-password" type="password" class="form-control" placeholder="confirm password...">
                                        </div>
                                    </div>
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">
                                            <label>Email <small>(required)</small></label>
                                            <input name="email" type="email" class="form-control" placeholder="user@example.com">
                                        </div>
                                    </div>
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">
                                            <label>Phone <small>(optional)</small></label>
                                            <input name="phone" type="tel" class="form-control" placeholder="0123456789">
                                        </div>
                                    </div>
                                    <div class="col-sm-10 col-sm-offset-1">
                                        <div class="form-group">
                                            <label>Paypal <small>(optional)</small></label>
                                            <input name="paypal" type="text" class="form-control" placeholder="paypal account">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="email-verification">
                                <br>
                                <h5 class="info-text"> The verification code has been sent to your email. </h5>
                                <div class="row">
                                    <div class="col-sm-4 col-sm-offset-4">
                                        <div class="form-group">
                                            <!--<label>The verification code has been sent to your email.</label>-->
                                            <div class="input-group">
                                                <input name="verification" type="text" class="form-control" placeholder="012345">
                                                <span class="input-group-addon status"></span>
                                                <span class="input-group-addon"><a>Resend</a></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="complete">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <h5>Registration Completed!</h5>
                                        <p>Your account has been activated successfully.
                                        <h5 class="info-text"> Hello, Charles. Welcome to Cooking World! </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wizard-footer">
                            <div class="pull-right">
                                <input type='button' class='btn btn-next btn-fill btn-warning btn-wd' name='next' value='Next' />
                                <input type='button' class='btn btn-finish btn-fill btn-primary btn-wd' name='finish' value='Finish' />
                            </div>

                            <div class="pull-left">
                                <input type='button' class='btn btn-previous btn-default btn-wd' name='previous' value='Previous' />
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </form>
                </div>
            </div> <!-- wizard container -->
        </div>
    </div><!-- end row -->
{% endblock %}
{% block scripts %}
    <script src="{{ rootpath }}public/js/jquery.bootstrap.wizard.js" type="text/javascript"></script>

    <!--  Plugin for the Wizard -->
    <script src="{{ rootpath }}public/js/paper-bootstrap-wizard.js" type="text/javascript"></script>

    <!--  More information about jquery.validate here: http://jqueryvalidation.org/	 -->
    <script src="{{ rootpath }}public/js/jquery.validate.min.js" type="text/javascript"></script>
<script type="text/javascript">
    "use strict";
    +(function($, window, document, undefined)
    {
        $('body').addClass('register-body');
        $('.register-avatar h3').click(function(){
            $('#wizard-picture').trigger("click");
        });
        var $username = $('input[name="username"]'),
            $password = $('input[name="password"]'),
            $email = $('input[name="email"]'),
            $phone = $('input[name="phone"]'),
            $paypal = $('input[name="paypal"]'),
            $vinput = $('input[name="verification"]'),
            $avatarbox = $('.register-avatar'),
            $avatar = $('.picture img'),
            wrong_ic = "<i style=\"color: red;font-size: large\" class=\"fa fa-times-circle\" aria-hidden=\"true\"></i>",
            correct_ic = "<i style=\"color: green;font-size: large\" class=\"fa fa-check-circle\" aria-hidden=\"true\"></i>",
            $status_span = $('span.status'),
            $next = $('input[name="next"]'),
            $finish = $('input[name="finish"]');
        $next.click(function () {
            // if the page is on the the user info
            if($('#userinfo-tab').hasClass('active')){
                var email = $email.val();
                $.ajax({
                    url: 'getVerificationCode',
                    method: 'get',
                    data: {
                        email: email
                    },
                    success: function (result) {
                        if(result)
                            alert("The verification code has been sent to your email");
                        else
                            alert("Fail to send the verification code to your email, please try another one");
                    }
                });
            }else if($('#verification-tab').hasClass('active')){
                $.ajax({
                    url: 'register',
                    method: 'POST',
                    data: {
                        username: function () {
                            return $username.val();
                        },
                        password: function () {
                            return $password.val();
                        },
                        email: function () {
                            return $email.val();
                        },
                        phone: function () {
                            return $phone.val();
                        },
                        paypal: function () {
                            return $paypal.val();
                        },
                        hasphoto: function () {
                            return $avatarbox.hasClass('has-photo');
                        },
                        photo: function () {
                            return $avatar.attr('src');
                        }
                    },
                    success: function (r) {
                        var result = JSON.parse(r);
                        if(result.status == 200)
                            alert(result.msg);
                        else
                            alert(result.msg);
                    }
                });
            }
        });
    })(jQuery, window, document);
</script>
{% endblock %}
